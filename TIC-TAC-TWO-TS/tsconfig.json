{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "outDir": "./public",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "lib": ["es2020", "dom"]
  },
  "include": ["src"]
}
